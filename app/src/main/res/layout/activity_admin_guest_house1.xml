<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="articlesapp.zack.com.touristman.MallFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editTextAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="enter mall address"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="120dp"
            android:layout_below="@+id/editTextName"
            android:layout_alignLeft="@+id/editTextName"
            android:layout_alignStart="@+id/editTextName" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image add"
            android:layout_below="@+id/buttonAdd"
            android:layout_alignStart="@+id/buttonAdd"
            android:layout_marginTop="75dp" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text Add"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="217dp"
            android:layout_below="@+id/editTextAdress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp" />


        <EditText
            android:id="@+id/editTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:hint="enter mall name"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="40dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_below="@+id/buttonAdd"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</FrameLayout>

